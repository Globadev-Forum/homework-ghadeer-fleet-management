@model FleetManagement.Models.DriverViewModel

@{
    ViewBag.Title = "Delete Driver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.title</h2>

<h3 style="font-size:15px; color: red;">Are you sure you want to delete this?</h3>
<div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DisplayFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
         @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
